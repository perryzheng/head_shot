<h1>Listing shots</h1>

<table>
  <tr>
    <th>Content</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @shots.each do |shot| %>
  <tr>
    <td><%= shot.content %></td>
    <td><%= shot.user_id %></td>
	<td><%= shot.push_url%></td>
    <td><%= link_to 'Show', shot %></td>
    <td><%= link_to 'Edit', edit_shot_path(shot) %></td>
    <td><%= link_to 'Destroy', shot, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

